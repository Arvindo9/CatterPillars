<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.solution.catterpillars.ui.lockScreen.model.LockScreenViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/dp_4">

                    <RelativeLayout
                        android:id="@+id/lockLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/offLockScreen"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_22sp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/lockAdsCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:checked="true"
                            android:scaleX="1.4"
                            android:scaleY="1.4" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/newsTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:onClick="onClick"
                    app:cardCornerRadius="@dimen/dp_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/newsImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:contentDescription="@string/newsImage"
                            android:scaleType="fitXY"
                            app:Image="@{data.Image}"
                            tools:srcCompat="@tools:sample/avatars" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/title"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:maxLines="2"
                            android:text="@{data.Title}"
                            android:textStyle="bold"
                            tools:text="Title" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/description"
                            style="@style/Base.TextAppearance.AppCompat.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:maxLines="3"
                            android:text="@{data.message}"
                            tools:text="description" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/date"
                            style="@style/Base.TextAppearance.AppCompat.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@{data.PostDate}"
                            android:visibility="gone"
                            tools:text="date" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/adViewCard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:visibility="gone"
                    ads:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/dp_4">


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"

                    ads:cardBackgroundColor="@color/redThemeColorAccent"
                    app:cardCornerRadius="@dimen/dp_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingEnd="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_4"
                            android:paddingBottom="@dimen/_8sdp">

                            <ImageView
                                android:id="@+id/newsIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/rounded_button"
                                android:padding="5dp"
                                app:srcCompat="@drawable/ic_newspaper" />

                            <TextView
                                android:id="@+id/news"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_4"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_toEndOf="@+id/newsIcon"
                                android:layout_toRightOf="@+id/newsIcon"
                                android:gravity="center"
                                android:text="@string/news"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/viewAll"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:onClick="onClick"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/view_all"
                                android:textColor="@color/colorPrimaryDark" />
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/listViewNews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/adViewCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:visibility="gone"
                    ads:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/dp_4">

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70dp" />
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

        <com.solution.catterpillars.ui.lockScreen.unlock.UnlockBar
            android:id="@+id/unlock"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</layout>