<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/adsBannerSplash" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:onClick="onClick"
                android:padding="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_back_arrow_circular_white" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/bottom_panels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topView"
            android:background="@null"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="top"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/imageView4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintBottom_toTopOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/create_new_account"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.15" />

                    <ImageView
                        android:id="@+id/imageView_upper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/dp_4"
                        android:src="@mipmap/app_icon_round_white"
                        app:layout_constraintBottom_toBottomOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/guideline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_25dp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_upper">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/sponsor_detail" />

                            <TextView
                                android:id="@+id/getSponserID"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/button_border_accent"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="2dp"
                                android:elevation="2dp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:text="@string/get_company_id"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/referenceCode"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/edittext_bg"
                            android:hint="@string/reference_code"
                            android:inputType="text"
                            android:padding="@dimen/_12sdp"
                            android:drawableEnd="@drawable/ic_phone_book"
                            android:drawableRight="@drawable/ic_phone_book" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/personal_detail" />


                        <EditText
                            android:id="@+id/userName"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/edittext_bg"
                            android:hint="@string/full_name"
                            android:inputType="text"
                            android:padding="@dimen/_12sdp"
                            android:importantForAutofill="no" />

                        <!--<EditText
                            android:id="@+id/mobile"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/edittext_bg"
                            android:hint="@string/mobile_no"
                            android:inputType="number"
                            android:padding="@dimen/_12sdp" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"

                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/countryCode"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:background="@drawable/edittext_bg"
                                    android:hint="@string/_91"
                                    android:inputType="number"
                                    android:paddingLeft="@dimen/dp_57"
                                    android:paddingTop="@dimen/_12sdp"
                                    android:paddingRight="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_12sdp" />

                                <android.support.v7.widget.CardView
                                    android:id="@+id/cardView"
                                    android:layout_width="45dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_7"
                                    card_view:cardCornerRadius="@dimen/dp_4">

                                    <android.support.v7.widget.AppCompatImageView
                                        android:id="@+id/flagIcon"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:onClick="onClick"
                                        android:scaleType="fitXY" />
                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/mobile"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_3"
                                android:layout_marginLeft="@dimen/dp_3"
                                android:background="@drawable/edittext_bg"
                                android:hint="@string/mobile_no"
                                android:inputType="number"
                                android:padding="@dimen/_12sdp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/email"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/edittext_bg"
                            android:hint="@string/email_id"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/password"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/edittext_bg"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:padding="@dimen/_12sdp" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/confirmPassword"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/edittext_bg"
                            android:hint="@string/confirm_password"
                            android:inputType="textPassword"
                            android:padding="@dimen/_12sdp" />

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/i_agree_with"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onClick"
                                android:text="@string/t_amp_c"
                                android:textColor="@color/blue"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/and"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/privacyPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onClick"
                                android:text="@string/privacy_policy"
                                android:textColor="@color/blue"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/login"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/dp_3"
                            android:layout_marginBottom="@dimen/dp_57"
                            android:layout_weight="1"
                            android:background="@drawable/button_border"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:padding="@dimen/_15sdp"
                            android:text="@string/signup"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />


                        <TextView
                            android:id="@+id/loginBack"
                            style="@style/TextAppearance.AppCompat.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/_30dp"
                            android:onClick="onClick"
                            android:padding="@dimen/_5sdp"
                            android:visibility="gone"
                            android:text="@string/already_have_an_account"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>





