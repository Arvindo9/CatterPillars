<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.solution.catterpillars.ui.home.dashboard.model.DataList" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/incomeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_4dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_box_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_4dp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingRight="@dimen/_4dp"
            android:paddingBottom="@dimen/_20sdp">


            <TextView
                android:id="@+id/count"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:padding="@dimen/_4dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:gravity="center_vertical"
                android:text="This month member"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>