<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.solution.catterpillars.ui.home.dashboard.model.DataList" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/adsContatinerTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_115"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:gravity="center"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_4dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/ic_box_red"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/pendingCount"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:padding="@dimen/_10sdp"
                            android:text="0"
                            android:textColor="@android:color/white" />

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"

                            android:text="Task Pending"
                            android:textColor="@android:color/white" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/viewPendingTask"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="View Pending Task"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            app:backgroundTint="@android:color/white" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_4dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_box_green"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/completedCount"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:padding="@dimen/_10sdp"
                            android:text="0"
                            android:textColor="@android:color/white" />

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Task Completed"
                            android:textColor="@android:color/white" />
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/viewCompletedTask"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:text="View Compleated Task"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            app:backgroundTint="@android:color/white" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/adsContatinerBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/mainView"
                android:gravity="center|bottom"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>